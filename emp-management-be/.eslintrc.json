{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars":"warn",
        "@typescript-eslint/no-var-requires":"warn",
        "prefer-const":"warn",
        "@typescript-eslint/indent": [1, 2],
        "no-undefined":[1],
        "no-multiple-empty-lines":["warn",{"max":1}],
        "no-console":"off",
        "semi":["error"],
        "no-unused-vars":"warn",
        "no-undef":"warn",
        "no-shadow":"warn",
        "import/no-import-module-exports":"warn",
        "import/no-dynamic-require":"warn",
        "global-require":"warn"
    }
}
